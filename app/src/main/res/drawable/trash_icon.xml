<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="@color/colorPrimary" />

                    <solid android:color="@color/whiteText" />
                </shape>
            </item>
            <item android:bottom="10dp" android:drawable="@drawable/ic_fab_trash" android:left="10dp" android:right="10dp" android:top="10dp" />
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="@color/colorPrimary" />

                    <solid android:color="@color/whiteText" />
                </shape>
            </item>
            <item android:bottom="10dp" android:drawable="@drawable/ic_fab_trash_released" android:left="10dp" android:right="10dp" android:top="10dp" />
        </layer-list>
    </item>
</selector>